<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="relish.permoveo.com.relish.activities.AddFriendsActivity">

    <include layout="@layout/toolbar" />

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/add_friends_tabs"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:textColor="@android:color/white"
        app:pstsIndicatorColor="@android:color/white"
        app:pstsTabTextColor="@android:color/white"
        app:pstsTabTextAllCaps="true"
        android:background="@color/main_color"
        app:pstsShouldExpand="true" />

    <android.support.v4.view.ViewPager
        android:id="@+id/add_friends_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_friends_tabs" />

</RelativeLayout>