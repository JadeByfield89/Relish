<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="relish.permoveo.com.relish.fragments.PlacesFragment">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="224dp">

        <ImageView
            android:id="@+id/header_place_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/place_image_dim" />


        <relish.permoveo.com.relish.widget.RatingView
            android:id="@+id/header_rating_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/header_place_name"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/header_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="Rest"
            android:textSize="18sp"
            android:layout_above="@+id/header_place_distance"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/header_place_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/white"
            android:text="0.5 miles"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/header_place_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:text="$$"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp" />

    </RelativeLayout>

    <com.etsy.android.grid.StaggeredGridView
        android:id="@+id/staggered_grid"
        android:layout_below="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:item_margin="4dp" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab_places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_white_24dp"
        app:fab_colorNormal="@color/main_color"
        app:fab_colorPressed="@color/main_color_dark"
        app:fab_shadow="true" />

</RelativeLayout>
