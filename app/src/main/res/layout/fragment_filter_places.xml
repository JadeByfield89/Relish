            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center"
            android:layout_toRightOf="@id/type_chinese"
            android:layout_marginRight="10dp"
            android:text="@string/type_delis"
            android:textColor="@color/add_friend_radio_color"
            android:background="@drawable/add_friend_radio_background"
            android:clickable="true" />

        <TextView
            android:id="@+id/type_thai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/places_categories_text_size"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center"
            android:layout_below="@id/type_caribbean"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:text="@string/type_thai"
            android:textColor="@color/add_friend_radio_color"
            android:background="@drawable/add_friend_radio_background"
            android:clickable="true" />


        <TextView
            android:id="@+id/type_soulfood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/places_categories_text_size"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_below="@id/type_thai"
            android:layout_marginRight="10dp"
            android:text="@string/type_soul_food"
            android:textColor="@color/add_friend_radio_color"
            android:background="@drawable/add_friend_radio_background"
            android:clickable="true" />

        <TextView
            android:id="@+id/type_buffets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/places_categories_text_size"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_below="@id/type_chinese"
