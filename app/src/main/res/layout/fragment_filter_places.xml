            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/type_soulfood"
            android:layout_below="@id/type_japanese"
            android:layout_marginRight="10dp"
            android:text="@string/type_brasseries"
            android:textColor="@color/add_friend_radio_color"
            android:background="@drawable/add_friend_radio_background"
