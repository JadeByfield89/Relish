<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:background="@color/fragment_background"
    tools:context="relish.permoveo.com.relish.fragments.InvitesFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/invites_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="12dp"
        android:padding="12dp"
        android:listSelector="@android:color/transparent"
        android:scrollingCache="false"
        android:clipToPadding="false"
        android:fadeScrollbars="true"
        android:scrollbarStyle="outsideOverlay" />

    <LinearLayout
        android:id="@+id/empty_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center">

        <ImageView
            android:src="@drawable/ic_invites_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/empty_message"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/empty_color"
            android:text="@string/invites_list_empty"
            android:textSize="18sp"
            android:gravity="center"/>

    </LinearLayout>

    <relish.permoveo.com.relish.view.BounceProgressBar
        xmlns:bpb="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bounce_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        bpb:shape="circle"
        bpb:singleSrcSize="14dp"
        bpb:speed="250"
        bpb:src="@color/main_color"/>

    <View
        android:id="@+id/touch_interceptor_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:id="@+id/details_layout"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/invite_map_image"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@drawable/google_maps" />


        <TextView
            android:id="@+id/invite_title"
            android:text="Lunch with Friends"
            android:textColor="@android:color/black"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/invite_map_image"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/invite_date_time"
            android:text="June 9 / 4:00pm"
            android:textSize="12sp"
            android:layout_marginTop="12dp"

            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/invite_map_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:id="@+id/invite_place_name"
            android:layout_below="@id/invite_title"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@id/invite_title"
            android:text="D'elish Sandwich Shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/invite_place_address"
            android:layout_below="@id/invite_place_name"
            android:layout_alignLeft="@id/invite_place_name"
            android:text="525 S Main St, Atlanta GA, 31001"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <com.alexvasilkov.foldablelayout.UnfoldableView
        android:id="@+id/unfoldable_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab_invite"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:elevation="10dp"
        android:src="@drawable/ic_send"
        app:fab_colorNormal="@color/main_color"
        app:fab_colorPressed="@color/main_color_dark"
        app:fab_shadow="true" />

</RelativeLayout>
