<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/fragment_background"
             tools:context="relish.permoveo.com.relish.fragments.search.FacebookFriendsFragment">

    <RelativeLayout
        android:id="@+id/empty_contacts_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivEmpty"
            android:src="@drawable/ic_freinds_empty"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="70dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/empty_message"
            android:layout_marginTop="16dp"
            android:layout_below="@id/ivEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/empty_color"
            android:text="@string/no_facebook_friends"
            android:textSize="18sp"
            android:gravity="center"/>
    </RelativeLayout>

</FrameLayout>
