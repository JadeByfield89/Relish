<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/dialog_container"
              android:background="@drawable/loader_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_height="wrap_content"
            android:text="Choose Group"
            android:background="@drawable/relish_bg_pattern"

            android:textSize="18sp"
            android:textColor="@android:color/white"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/add_friend_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/relish_avatar_placeholder"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/add_friend_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:textColor="#747474"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <TextView
                android:id="@+id/add_friend_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Friends"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="@color/add_friend_radio_color"
                android:background="@drawable/add_friend_radio_background"
                android:clickable="true"/>

            <TextView
                android:id="@+id/add_friend_colleagues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:text="Colleagues"
                android:textColor="@color/add_friend_radio_color"
                android:background="@drawable/add_friend_radio_background"
                android:clickable="true"/>


            <TextView
                android:id="@+id/add_friend_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Coworkers"
                android:gravity="center"
                android:textColor="@color/add_friend_radio_color"
                android:background="@drawable/add_friend_radio_background"
                android:clickable="true"/>
        </LinearLayout>


        <TextView
            android:id="@+id/add_friend_button"
            android:layout_width="match_parent"
            android:textColor="@color/add_friend_button_color"
            android:clickable="true"
            android:paddingTop="16dp"
            android:text="DONE"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:background="@drawable/dialog_button_neutral"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</LinearLayout>