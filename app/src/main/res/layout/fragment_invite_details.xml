<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="relish.permoveo.com.relish.fragments.inviteflow.InviteDetailsFragment">

    <RelativeLayout
        android:id="@+id/invite_details_card"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/invite_card_background"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/button_next"
            android:scrollbars="none">

            <LinearLayout
                android:orientation="vertical"
                android:clipToPadding="false"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="32dp"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/invite_details_title_container"
                    android:layout_marginTop="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/invite_title_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_invite_title"/>

                    <LinearLayout
                        android:id="@+id/details_invite_title_text_container"
                        android:layout_marginLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/invite_title_icon"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/details_invite_title_desc"
                            android:includeFontPadding="false"
                            android:textColor="@color/empty_color"
                            android:textColorHint="@color/empty_color"
                            android:focusable="false"
                            android:textSize="16sp"
                            android:text="@string/invite_details_invite_title"
                            android:layout_marginRight="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <EditText
                            android:id="@+id/invite_details_title"
                            android:includeFontPadding="false"
                            android:background="@android:color/transparent"
                            android:textColor="@color/invite_details_input_color"
                            android:textColorHint="@color/invite_details_input_color"
                            android:gravity="right|end"
                            android:imeOptions="actionDone"
                            android:inputType="textCapWords"
                            android:hint="@string/enter_title_hint"
                            android:textSize="16sp"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/details_invite_title_text_container"
                        android:background="#dbdbdb"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/invite_title_icon"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/invite_details_location_container"
                    android:layout_marginTop="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/location_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_location"/>

                    <LinearLayout
                        android:id="@+id/details_location_text_container"
                        android:layout_marginLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/location_icon"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/details_invite_location_desc"
                            android:includeFontPadding="false"
                            android:textColor="@color/empty_color"
                            android:textColorHint="@color/empty_color"
                            android:focusable="false"
                            android:textSize="16sp"
                            android:text="@string/invite_details_location"
                            android:layout_marginRight="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:id="@+id/invite_details_location"
                            android:includeFontPadding="false"
                            android:clickable="false"
                            android:background="@android:color/transparent"
                            android:textColor="@color/invite_details_input_color"
                            android:textColorHint="@color/invite_details_input_color"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/details_location_text_container"
                        android:background="#dbdbdb"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/location_icon"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/invite_details_date_container"
                    android:clickable="true"
                    android:layout_marginTop="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/date_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_date"/>

                    <LinearLayout
                        android:id="@+id/details_date_text_container"
                        android:layout_marginLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/date_icon"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/invite_details_date_desc"
                            android:includeFontPadding="false"
                            android:textColor="@color/empty_color"
                            android:textColorHint="@color/empty_color"
                            android:focusable="false"
                            android:textSize="16sp"
                            android:text="@string/invite_details_date"
                            android:layout_marginRight="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:id="@+id/invite_details_date"
                            android:includeFontPadding="false"
                            android:clickable="true"
                            android:background="@android:color/transparent"
                            android:textColor="@color/invite_details_color"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/details_date_text_container"
                        android:background="#dbdbdb"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/date_icon"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/invite_details_time_container"
                    android:clickable="true"
                    android:layout_marginTop="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/time_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_time"/>

                    <LinearLayout
                        android:id="@+id/details_time_text_container"
                        android:layout_marginLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/time_icon"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/details_invite_time_desc"
                            android:includeFontPadding="false"
                            android:textColor="@color/empty_color"
                            android:textColorHint="@color/empty_color"
                            android:focusable="false"
                            android:textSize="16sp"
                            android:text="@string/invite_details_time"
                            android:layout_marginRight="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:id="@+id/invite_details_time"
                            android:includeFontPadding="false"
                            android:background="@android:color/transparent"
                            android:textColor="@color/invite_details_color"
                            android:gravity="right"
                            android:clickable="true"
                            android:textSize="16sp"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/details_time_text_container"
                        android:background="#dbdbdb"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/time_icon"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/invite_details_reminder_container"
                    android:layout_marginTop="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/reminder_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_reminder"/>

                    <RelativeLayout
                        android:id="@+id/details_reminder_text_container"
                        android:layout_marginLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/reminder_icon"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/details_invite_reminder_desc"
                            android:includeFontPadding="false"
                            android:textColor="@color/empty_color"
                            android:textColorHint="@color/empty_color"
                            android:focusable="false"
                            android:textSize="16sp"
                            android:layout_marginRight="16dp"
                            android:text="@string/invite_details_reminder"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>


                        <Spinner
                            android:id="@+id/reminder_spinner"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            style="@style/MaterialSpinner"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/details_reminder_text_container"
                        android:background="#dbdbdb"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/reminder_icon"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/invite_details_note_container"
                    android:layout_marginTop="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/note_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_note"/>

                    <RelativeLayout
                        android:id="@+id/details_note_text_container"
                        android:layout_marginLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/note_icon"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/details_invite_note"
                            android:includeFontPadding="false"
                            android:background="@android:color/transparent"
                            android:textColor="@color/invite_details_input_color"
                            android:textColorHint="@color/empty_color"
                            android:imeOptions="actionDone"
                            android:hint="@string/note_hint"
                            android:textSize="16sp"
                            android:singleLine="false"
                            android:maxLines="6"
                            android:maxLength="140"
                            android:inputType="textCapSentences|textMultiLine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/details_note_text_container"
                        android:background="#dbdbdb"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/note_icon"/>

                </RelativeLayout>


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:text="@string/invite_continue"
            android:background="@drawable/invite_button"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


</RelativeLayout>
