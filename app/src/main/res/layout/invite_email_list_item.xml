<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ripple"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    app:rv_alpha="255"
    app:rv_centered="true"
    app:rv_type="rectangle">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/invite_friend_background">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/email_contact_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/email_contact_image"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/email_contact_name"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:text="Jade Byfield"
                android:textColor="@color/invite_friend_name_color"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/email_contact_email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="jjbyfield@gmail.com"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="2dp"
                android:textColor="@color/dialog_button_idle"
                android:textSize="15sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/friends_list_divider" />

    </RelativeLayout>


</com.andexert.library.RippleView>